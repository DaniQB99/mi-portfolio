---
const { id, title } = Astro.props;
---

<section id={id}>
    {title && <h2>{title}</h2>}

    <slot />
</section>

<style>
    section {
        max-width: 800px;
        margin: 0 auto 40px;
    }
    h2 {
        margin-bottom: 8px;
        font-weight: 700;
        line-height: 1.5;
        font-size: 2rem;
    }
</style>