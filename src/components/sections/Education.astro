---
import Section from "../Section.astro";

import { education } from "@cv";
---

<Section id="educacion" title="EducaciÃ³n">

    <ul>
        {
            education.map(({ institution, area, studyType, startDate, endDate }) => {
                const startYear = new Date(startDate).getFullYear();
                const endYear =
                    endDate != null
                        ? new Date(endDate).getFullYear()
                        : "Actual";
                const years = `${startYear} - ${endYear}`;

                return (
                    <li>
                        <div></div>
                        <time>{years}</time>
                        <h3>{area}</h3>    
                        <h4>{institution}</h4>
                        <p>{studyType}</p>    
                    </li>
                )
            })
        }
    </ul>
</Section>


<style>
    ul {
        position: relative;
        border-inline-start: 1px solid;
        border-color: #666;
        padding: 1rem;
        margin-bottom: 0.5rem;
    }
    div {
        position: absolute;
        width: 0.75rem;
        height: 0.75rem;
        background-color: #444;
        border-radius: 100%;
        margin-top: 0.1rem;
        inset-inline-start: -0.4rem;  
    }
    time {
        font-size: 1rem;
        color: #444;
        font-style: italic;
    }
    h3 {
        font-weight: 800;
        color: #222;
        font-size: 1.4rem;
        margin-top: 1.5rem;
    }
    h4 {
        font-weight: 500;
        color: #33;
        font-size: 1rem;
        margin-bottom: 0.7rem;
    }
    p {
        color: #555;
        font-size: 0.9rem;
        margin-bottom: 1rem;
    }
    li::marker {
        content: "";
        display: none;
    }
</style>