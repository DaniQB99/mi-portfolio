---
import Section from "../Section.astro";

import { education } from "@cv";
---

<Section id="educacion" title="EducaciÃ³n">

    <ul>
        {
            education.map(({ institution, area, studyType, startDate, endDate }) => {
                const startYear = new Date(startDate).getFullYear();
                const endYear =
                    endDate != null
                        ? new Date(endDate).getFullYear()
                        : "Actual";
                const years = `${startYear} - ${endYear}`;

                return (
                    <li>
                        <article>
                            <header>
                                <div>
                                    <h3>{institution}</h3>
                                    <h4>{area}</h4>
                                </div>
                                
                                <time>{years}</time>
                            </header>
                            <footer>
                                <p>{studyType}</p>
                            </footer>
                        </article>
                    </li>
                )
            })
        }
    </ul>
</Section>


<style>
    ul {
        display: flex;
        flex-direction: column;
        gap: 32px;
    }
    article h3 {
        font-weight: 600;
        color: #222;
        font-size: 1.15rem;
    }
    article h4 {
        font-weight: 500;
        color: #444;
        font-size: 1rem;
        margin-bottom: 4px;
    }
    header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 2px;
    }
    time {
        font-size: 1rem;
        margin-top: 20px;
        color: #444;
    }
    footer p {
        color: #555;
        font-size: 0.9rem;
    }
</style>